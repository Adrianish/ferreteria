{% extends 'ferreteriaZambranoBundle::layout.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/ferreteriaZambrano/css/tablas_indice.css') }}" type="text/css" media="all" />
{% endblock %}
    
{% block content %}

    <h1>Lista de Usuarios</h1>

    <table class="records_list tabla">
        <thead>
            <tr class="tbHeader1">
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="tbSubHeader1">
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>
                <ul>
                    <!--<li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>-->
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}" class="agregar">
                Crear Usuario
            </a>
        </li>
    </ul>
    {% endblock %}
