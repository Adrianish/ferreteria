{% extends 'ferreteriaZambranoBundle::layout.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/ferreteriaZambrano/css/tablas_indice.css') }}" type="text/css" media="all" />
{% endblock %}
    
{% block content %}
    <h1>Editar Usuario</h1>

    <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button class="agregar" type="submit">Editar</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}" class="agregar">
            Regresar
        </a>
    </li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="agregar" type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}
