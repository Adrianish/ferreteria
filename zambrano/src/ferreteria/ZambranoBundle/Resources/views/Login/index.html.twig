{% extends 'ferreteriaZambranoBundle::layout.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/ferreteriaZambrano/css/login.css') }}" type="text/css" media="all" />
{% endblock %}
{% block content %}
    <div class="cajas_blancas_50">
            <div class="titulo_cajas_blancas_50" title>Ferreteria Zambrano</div>
            <div class="sub_contenido">
                <form action="{{ path('login_check') }}" method="post">
                    <label for="username">Nick:</label>
                    <br />
                    <input id="username" type="text" name="_username"  value="{{ last_username }}" onfocus="this.setAttribute('maxlength', 30)"/><br />
                    <label for="password">Contrase√±a:</label>
                    <br />
                    <input id="password" type="password" name="_password" onfocus="this.setAttribute('maxlength', 30)"/><br /><br />
                    
                    <input type="submit" name="login" value="Login" />
                </form>
                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}
                
            </div>
            <div class="cl_b"></div>
    </div>
{% endblock %}